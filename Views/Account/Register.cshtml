@model TestProgrammasy.DTOs.RegisterDTO
@{
    ViewData["Title"] = "Ulgama Ýazylmak";
}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center">Hasap Döret</h2>
                <form asp-action="Register" method="post">                   

                    <div class="form-group">
                        <label asp-for="FirstName">Ady</label>
                        <input asp-for="FirstName" placeholder="Ady" autocomplete="off" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Familiýasy</label>
                        <input asp-for="LastName" class="form-control" autocomplete="off" placeholder="Familiýasy" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserType">Ulanyjy Görnüşi</label>
                        <select asp-for="UserType" id="rol" class="form-control" required>
                            <option value="">Saýlaň</option>
                            <option value="Teacher">Mugallym</option>
                            <option value="Student">Okuwçy</option>
                        </select>
                    </div>
                    <div id="classField" class="form-group" style="display: none;">
                    <label asp-for="Class">Synpyňyz:</label>
                    <input id="class" asp-for="Class" class="form-control" placeholder="Synpyňyzy giriziň">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Açar sözüňiz</label>
                        <input asp-for="Password" class="form-control" autocomplete="off" placeholder="Açar sözüňiz" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>    
                    <div class="form-group">
                       <button type="submit" class="btn btn-primary btn-block">Hasap Döret</button>
                       </div>
                       <hr />
                    <div class="text-center">
                        <p class="mb-0">Hasabyňyz barmy?</p>
                        <a asp-action="Login" class="btn btn-link p-0">Ulgama gir!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/custom.css" />

    <style>
        /* Kartyň merkezde durmagy üçin */
        .row.justify-content-center {
            min-height: 100vh;
            align-items: center;
            margin: 0;
        }

        /* Kartyň ýokarky boşlugy aýrylýar sebäbi row-da center edilen */
        .card {
            margin-top: 0 !important;
        }

        /* Giriş düwmesi üçin reňk */
        .btn-primary {
            background-color: #4a90e2;
            border-color: #4a90e2;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #357abd;
                border-color: #357abd;
            }
        /* Register sahypasy üçin */
        .register-card {
            max-width: 500px;
            margin: auto;
        }

        .register-form select {
            height: 45px;
            border-radius: 8px;
        }

        #classField {
            transition: all 0.3s ease;
            opacity: 1;
        }

            #classField.hidden {
                opacity: 0;
                height: 0;
                margin: 0;
                padding: 0;
            }
    </style>
}
@section Scripts{
    <script>
        document.getElementById("rol").addEventListener("change", function () {
            var role = this.value;
            console.log(role);

            var classField = document.getElementById("classField");

            if (role === "Student") {
                classField.style.display = "block"; // Görkez
            } else {
                classField.style.display = "none"; // Gizle
            }
        });
    </script>
}