@model TestProgrammasy.DTOs.LoginDTO
@{
    ViewData["Title"] = "Giriş";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card" style="margin-top: 70px">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Ulgama Giriş</h2>

                <form method="post" asp-action="Login" asp-controller="Account">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserName">Ulanyjy adyňyz</label>
                        <input asp-for="UserName" class="form-control" placeholder="Ulanyjy adyňyz" autocomplete="off" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Açar sözüňiz</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Açar sözüňiz" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @* <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="rememberMe">
                            <label class="custom-control-label" for="rememberMe">Meni ýatda sakla</label>
                        </div>
                    </div> *@

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Giriş</button>
                    </div>                    

                    <hr />

                    <div class="text-center">
                        <p class="mb-0">Hasabyňyz ýokmy?</p>
                        <a asp-action="Register" class="btn btn-link">Täze hasap döret</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Styles{
    <link rel="stylesheet" href="~/css/custom.css" />

<style>
    /* Login sahypasy üçin */
    .login-card {
        max-width: 450px;
        margin: auto;
    }

    .login-title {
        position: relative;
        padding-bottom: 15px;
    }

        .login-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: #4a90e2;
        }

    .login-links {
        margin-top: 20px;
        text-align: center;
    }

        .login-links a {
            color: #4a90e2;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .login-links a:hover {
                color: #357abd;
            }
</style>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

