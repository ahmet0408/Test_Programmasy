@model List<TestProgrammasy.DTOs.UserRolesDTO>
@{
    ViewData["Title"] = "Ulanyjylar";
}
<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Ulanyjylar</h3>
        <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-light">
            <i class="bi bi-plus-circle"></i> Täze ulanyjy goşmak
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ady</th>
            <th>Familiýasy</th>
            <th>Ulanyjy Ady</th>
            <th>Ulanyjy görnüşi</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                @if(user.UserType=="Teacher"){
                    <td>Mugallym</td>
                } else if (user.UserType == "Student")
                {
                    <td>Okuwçy</td>
                } else
                {
                    <td>Administrator</td>
                }
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Rol üýtget </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
</div>
