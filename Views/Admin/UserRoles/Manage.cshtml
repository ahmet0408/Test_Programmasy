@model List<TestProgrammasy.DTOs.ManageUserRolesDTO>
@{
    ViewData["Title"] = "Ulanyjyny dolandyrmak";
}
<form method="post">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Ulanyjyň rollaryny dolandyrmak</h3>
            Rol goşmak ýa-da aýyrmak ulanyjy  / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-4">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Üýtget" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" asp-controller="UserRoles" asp-route-id="@ViewBag.userId"
               class="btn btn-primary" style="width:auto">Goýbolsun</a>
        </div>
    </div>
</form>