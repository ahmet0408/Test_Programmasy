@model TestProgrammasy.DTOs.CreateTestDTO

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Täze Test Döretmek</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" id="testForm">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Test ady</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Giňişleýin</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group mb-3">
                        <label asp-for="Level" class="form-label">Derejesini saýlaň</label>
                        <select asp-for="Level" class="custom-select">
                            <option value=""></option>
                            <option value="Ýeňil">Ýeňil</option>
                            <option value="Orta">Orta</option>
                            <option value="Agyr">Agyr</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group mb-3">
                        <label asp-for="TimeLimit" class="form-label">Wagty(minutda)</label>
                        <input asp-for="TimeLimit" class="form-control" />
                        <span asp-validation-for="TimeLimit" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div id="questions-container">
                <!-- Questions will be added here dynamically -->
            </div>

            @* <div class="mt-3">
                <button type="button" class="btn btn-secondary" onclick="addQuestion()">
                    <i class="bi bi-plus-circle"></i> Sorag goş
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Testi atda sakla
                </button>
            </div> *@

            <button type="button"
                    class="btn btn-secondary"
                    onclick="addQuestion()">
                Sorag goş
            </button>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Testi ýatda sakla</button>
                <a asp-action="Index" class="btn btn-light">Yza gaýt</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        let questionCount = 0;

        function addQuestion() {
            questionCount++;
            const questionHtml = `
                    <div class="card mb-3 question-card" id="question-${questionCount}">
                    <!-- Hidden input for question index -->
                            <input type="hidden" name="Questions.Index" value="${questionCount}" />
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Sorag ${questionCount}</h5>
                            <button type="button" class="btn btn-danger btn-sm" onclick="removeQuestion(${questionCount})">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label class="form-label">Sorag teksti</label>
                                <textarea name="Questions[${questionCount}].QuestionText" class="form-control" rows="2"></textarea>
                            </div>
                            <div class="answers-container">
                                <div class="form-group mb-2">
                                    <label class="form-label">Jogaplar</label>
                                    <!-- Hidden input for correct answer -->
                                     <input type="hidden" name="Questions[${questionCount}].CorrectAnswerIndex" class="correct-answer-input" />
                                    <div class="input-group mb-2">
                                        <div class="input-group-text">
                                            <input type="radio" name="Questions[${questionCount}].CorrectAnswer" onchange="updateCorrectAnswer(${questionCount}, 0)">
                                        </div>
                                        <input type="text" class="form-control" name="Questions[${questionCount}].Answers[0].Text" placeholder="Jogap 1">
                                    </div>
                                    <div class="input-group mb-2">
                                        <div class="input-group-text">
                                            <input type="radio" name="Questions[${questionCount}].CorrectAnswer" onchange="updateCorrectAnswer(${questionCount}, 1)">
                                        </div>
                                        <input type="text" class="form-control" name="Questions[${questionCount}].Answers[1].Text" placeholder="Jogap 2">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

            $("#questions-container").append(questionHtml);
        }

        function removeQuestion(questionId) {
            $(`#question-${questionId}`).remove();
        }


        // Dogry jogaby ýatda saklamak üçin
        function updateCorrectAnswer(questionId, answerIndex) {
            $(`#question-${questionId} .correct-answer-input`).val(answerIndex);
        }


                // Form submit etmezden öň validasiýa we data formatlaşdyrmak
        $("#testForm").on("submit", function (e) {
            e.preventDefault();

            // Form maglumatlaryny ýygnamak
            let formData = new FormData(this);
            let testData = {
                Name: formData.get("Name"),
                Description: formData.get("Description"),
                TimeLimit: formData.get("TimeLimit"),
                Level: formData.get("Level"),
                Questions: []
            };

            // Her soragy ýygnamak
            $(".question-card").each(function(index) {
                let questionId = $(this).attr("id").split("-")[1];
                let question = {
                    QuestionText: formData.get(`Questions[${questionId}].QuestionText`),
                    Answers: [],
                    CorrectAnswerIndex: formData.get(`Questions[${questionId}].CorrectAnswerIndex`)
                };

                // Jogaplary ýygnamak
                $(this).find('input[name*="Answers"]').each(function(answerIndex) {
                    question.Answers.push({
                        AnswerText: $(this).val(),
                        IsCorrect: answerIndex == question.CorrectAnswerIndex
                    });
                });

                testData.Questions.push(question);
            });

            // AJAX bilen ibermek
            $.ajax({
                url: $(this).attr("action"),
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify(testData),
                success: function (response) {
                    showSuccessMessage("Test üstünlikli döredildi!");
                    setTimeout(() => window.location.href = "/Test", 1500);
                },
                error: function (xhr) {
                    showErrorMessage("Ýalňyşlyk ýüze çykdy. Täzeden synanyşyň.");
                }
            });
        });

        function showSuccessMessage(message) {
            $(".alert").remove();
            const alert = `<div class="alert alert-success">${message}</div>`;
            $("#testForm").before(alert);
        }

        function showErrorMessage(message) {
            $(".alert").remove();
            const alert = `<div class="alert alert-danger">${message}</div>`;
            $("#testForm").before(alert);
        }
    </script>
}