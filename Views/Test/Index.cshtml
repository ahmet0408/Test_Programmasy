@model List<TestProgrammasy.DTOs.TestDTO>

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Testler</h4>
        <a href="@Url.Action("Create")" class="btn btn-light">
            <i class="bi bi-plus-circle"></i> Täze test
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Test ady</th>
                        <th>Dersi</th>
                        <th>Sorag sany</th>
                        @* <th>Döredilen senesi</th> *@
                        <th>Operasiýalar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var test in Model)
                    {
                        <tr>
                            <td>@test.Name</td>
                            <td>@test.Description</td>
                            <td>@test.Questions.Count</td>
                            @* <td>@test.StartDate.ToShortDateString()</td> *@
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", new { id = test.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("Preview", new { id = test.Id })" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteTest(@test.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteTest(id) {
            if (confirm("Bu testi pozmak isleýärsiňizmi?")) {
                $.ajax({
                    url: `/Test/Delete/${id}`,
                    method: "POST",
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        alert("Ýalňyşlyk ýüze çykdy. Täzeden synanyşyň.");
                    }
                });
            }
        }
    </script>
}