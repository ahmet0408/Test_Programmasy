@{
    ViewData["Title"] = "Programma barada";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Hero Section -->
            <div class="text-center mb-5">
                <img src="~/images/Logo.svg" alt="Mekdep Test" class="hero-logo mb-4" />
                <h1 class="display-4 mb-3">Mekdep Test Ulgamy</h1>
                <p class="lead text-muted mb-4">
                    Orta mekdepler üçin döwrebap synaglary geçirmäge niýetlenen ulgam
                </p>
                <div class="divider">
                    <span></span>
                </div>
            </div>

            <!-- Main Features -->
            <div class="feature-cards mb-5">
                <div class="row g-4">
                    <!-- Registration Process -->
                    <div class="col-md-6">
                        <div class="feature-card">
                            <div class="icon-wrapper mb-3">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h3>Hasaba alyş</h3>
                            <p>Ulgama täze ulanyjy hökmünde hasaba alynmak üçin:</p>
                            <ol>
                                <li>Ulgama ýazylmak prosesini başladyň</li>
                                <li>Öz görnüşiňizi saýlaň (Okuwçy ýa-da Mugallym)</li>
                                <li>Gerekli maglumatlary dolduryň</li>
                                <li>Administrator tarapyndan tassyklanmagy garaşyň</li>
                            </ol>
                        </div>
                    </div>

                    <!-- User Types -->
                    <div class="col-md-6">
                        <div class="feature-card">
                            <div class="icon-wrapper mb-3">
                                <i class="fas fa-users"></i>
                            </div>
                            <h3>Ulanyjy Görnüşleri</h3>
                            <div class="user-types">
                                <div class="user-type">
                                    <span class="badge bg-primary">Okuwçy</span>
                                    <p>Testleri tabşyryp, öz netijeleri bilen tanyşyp bilýär</p>
                                </div>
                                <div class="user-type">
                                    <span class="badge bg-success">Mugallym</span>
                                    <p>Test soraglaryny döredip, netijeler bilen tanyşyp bilýär</p>
                                </div>
                                <div class="user-type">
                                    <span class="badge bg-info">Administrator</span>
                                    <p>Ulgamy dolandyryp, ulanyjylary tassyklaýar</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Teacher Features -->
            <div class="section-card mb-5">
                <h2 class="section-title">Mugallymlar üçin mümkinçilikler</h2>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="mini-card">
                            <div class="icon-circle">
                                <i class="fas fa-file-upload"></i>
                            </div>
                            <h4>Test ýüklemek</h4>
                            <p>Öz dersinden test soraglaryny ulgama ýerleşdirmek</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mini-card">
                            <div class="icon-circle">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <h4>Statistika</h4>
                            <p>Testleriň tabşyrylyş we netije statistikasyny görmek</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mini-card">
                            <div class="icon-circle">
                                <i class="fas fa-file-pdf"></i>
                            </div>
                            <h4>PDF ýüklemek</h4>
                            <p>Netijeler bilen PDF görnüşinde tanyşmak</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Student Features -->
            <div class="section-card mb-5">
                <h2 class="section-title">Okuwçylar üçin mümkinçilikler</h2>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="mini-card">
                            <div class="icon-circle">
                                <i class="fas fa-edit"></i>
                            </div>
                            <h4>Test tabşyrmak</h4>
                            <p>Islendik mugallymyň testini tabşyryp bilmek</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mini-card">
                            <div class="icon-circle">
                                <i class="fas fa-eye"></i>
                            </div>
                            <h4>Netijeler</h4>
                            <p>Öz test netijeleriňiz bilen tanyşmak</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mini-card">
                            <div class="icon-circle">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <h4>Test şertleri</h4>
                            <p>Test tabşyrmak üçin şertler bilen tanyşmak</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Info -->
            <div class="info-section">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title mb-4">Goşmaça maglumatlar</h3>
                                <div class="info-content">
                                    <p>Her bir mugallym:</p>
                                    <ul>
                                        <li>Öz testlerini döredip we redaktirläp bilýär</li>
                                        <li>Test netijeleri bilen tanşyp bilýär</li>
                                        <li>Statistiki maglumatlary görüp bilýär</li>
                                        <li>PDF görnüşinde hasabatlary alyp bilýär</li>
                                    </ul>

                                    <p>Her bir okuwçy:</p>
                                    <ul>
                                        <li>Testleriň şertleri bilen tanyşyp bilýär</li>
                                        <li>Özi islän testini tabşyryp bilýär</li>
                                        <li>Öz netijeleri bilen tanyşyp bilýär</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="~/css/all.min.css" />

    <style>
        .hero-logo {
            height: 120px;
            margin-bottom: 2rem;
            filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
        }

        .display-4 {
            color: #2c3e50;
            font-weight: 600;
        }

        .divider {
            width: 100%;
            text-align: center;
            margin: 30px 0;
            position: relative;
        }

            .divider span {
                display: inline-block;
                width: 50px;
                height: 2px;
                background: linear-gradient(90deg, #007bff, #00ff88);
            }

        .feature-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            height: 100%;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }

        .icon-wrapper {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(45deg, #007bff, #00ff88);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

            .icon-wrapper i {
                font-size: 24px;
                color: white;
            }

        .user-type {
            margin-bottom: 1rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .user-type:hover {
                background: #e9ecef;
            }

        .badge {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .section-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        }

        .section-title {
            color: #2c3e50;
            margin-bottom: 2rem;
            text-align: center;
            font-weight: 600;
        }

        .mini-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            height: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

            .mini-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            }

        .icon-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(45deg, #007bff, #00ff88);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

            .icon-circle i {
                color: white;
                font-size: 20px;
            }

        /* Info Section */
        .info-section {
            margin-top: 3rem;
        }

        .info-content {
            color: #2c3e50;
        }

            .info-content ul {
                padding-left: 1.5rem;
                margin-bottom: 1.5rem;
            }

            .info-content li {
                margin-bottom: 0.5rem;
                position: relative;
            }

                .info-content li::before {
                    content: "•";
                    color: #007bff;
                    font-weight: bold;
                    display: inline-block;
                    width: 1em;
                    margin-left: -1em;
                }

    </style>

}