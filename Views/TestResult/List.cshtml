@model List<TestProgrammasy.DTOs.TestResultDTO>
@{
    var userRole = User.IsInRole("Admin") ? "Admin" :
                  User.IsInRole("Teacher") ? "Teacher" : "Student";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Test Netijeleri</h3>
            @if (userRole != "Student")
            {
                <a href="@Url.Action("Analytics")" class="btn btn-info">
                    <i class="fas fa-chart-bar"></i> Analitika
                </a>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped" id="resultsTable">
                    <thead>
                        <tr>
                            <th>Test</th>
                            @if (userRole != "Student")
                            {
                                <th>Okuwçy</th>
                            }
                            <th>Ball</th>
                            <th>Göterim</th>
                            <th>Baha</th>
                            <th>Sene</th>
                            <th>Amallar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model)
                        {
                            <tr>
                                <td>@result.TestTitle</td>
                                @if (userRole != "Student")
                                {
                                    <td>@result.UserId</td>
                                }
                                <td>@result.EarnedPoints / @result.TotalPoints</td>
                                <td>@result.Percentage%</td>
                                <td>@result.Grade</td>
                                <td>@result.CompletedDate.ToShortDateString()</td>
                                <td>
                                    <a href="@Url.Action("Index", new { id = result.Id })"
                                       class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("ExportPdf", new { id = result.Id })"
                                       class="btn btn-sm btn-secondary">
                                        <i class="fas fa-file-pdf"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#resultsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });
        });
    </script>
}